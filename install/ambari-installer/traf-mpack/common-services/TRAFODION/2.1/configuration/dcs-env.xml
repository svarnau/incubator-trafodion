<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
 
<configuration supports_final="false">

  <!-- Define configuration paramaters for service: property name, default value and description (shown as help text) -->
  
  <property>
    <name>dcs.servers</name>
    <display-name>Client Connection Servers</display-name>
    <value>16</value>
    <description>The cluster-wide total number of concurrent DCS servers</description>
    <value-attributes>
      <type>int</type>
      <minimum>0</minimum>
      <maximum>256</maximum>
      <unit>Servers</unit>
      <increment-step>4</increment-step>
    </value-attributes>
  </property>
  <property>
    <name>dcs.port</name>
    <display-name>DCS Master Port</display-name>
    <value>23400</value>
    <description>Client Connection Port</description>
    <value-attributes>
      <type>int</type>
    </value-attributes>
  </property>
  <property>
    <name>dcs.info.port</name>
    <display-name>DCS Info Port</display-name>
    <value>24400</value>
    <description>Client Connection Info Port</description>
    <value-attributes>
      <type>int</type>
    </value-attributes>
  </property>
  <property>
    <name>content</name>
    <display-name>dcs-env template</display-name>
    <description>Template for dcs-env.sh file</description>
    <value>
export DCS_SERVERS_PARM={{dcs_servers}}
export DCS_PORT={{dcs_port}}
export DCS_INFO_PORT={{dcs_info_port}}
#export ENABLE_HA="{{ enable_ha }}"
  
    </value>
    <value-attributes>
      <type>content</type>
    </value-attributes>
  </property>
</configuration>
