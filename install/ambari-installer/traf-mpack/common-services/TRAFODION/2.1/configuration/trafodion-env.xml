<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
 
<configuration supports_final="false">

  <!-- Define configuration paramaters for service: property name, default value and description (shown as help text) -->
  
  <property>
    <name>dcs.servers</name>
    <display-name>Client Connection Servers</display-name>
    <value>16</value>
    <description>The total number of concurrent DCS servers</description>
    <value-attributes>
      <type>int</type>
      <minimum>0</minimum>
      <maximum>256</maximum>
      <unit>Servers</unit>
      <increment-step>4</increment-step>
    </value-attributes>
  </property>
  <property>
    <name>dcs.port</name>
    <display-name>DCS Master Port</display-name>
    <value>23400</value>
    <description>Client Connection Port</description>
    <value-attributes>
      <type>int</type>
    </value-attributes>
  </property>
  <property>
    <name>dcs.info.port</name>
    <display-name>DCS Info Port</display-name>
    <value>24400</value>
    <description>Client Connection Info Port</description>
    <value-attributes>
      <type>int</type>
    </value-attributes>
  </property>
  <property>
    <name>traf.db.admin</name>
    <display-name>Trafodion DB Admin User</display-name>
    <value>DB__ADMINUSER</value>
    <description>Database Admin Role</description>
    <value-attributes>
      <type>string</type>
    </value-attributes>
  </property>
  <property>
    <name>traf.conf.dir</name>
    <display-name>Trafodion Configuration Directory</display-name>
    <value>/etc/trafodion/conf</value>
    <description>Location of trafodion config files</description>
    <value-attributes>
      <type>directory</type>
    </value-attributes>
  </property>
  <property>
    <name>traf.sshkey.priv</name>
    <display-name>Generated SSH Key</display-name>
<!--TRAFODION-GENERATED-SSH-KEY--><value>
    </value>
    <description>Generated value, do not modify</description>
    <value-attributes>
      <type>password</type>
    </value-attributes>
  </property>
  <property>
    <name>content</name>
    <display-name>trafodion-env template</display-name>
    <description>Template for trafodion-env.sh file</description>
    <value>
export JAVA_HOME={{java_home}}
export DCS_SERVERS_PARM={{dcs_servers}}
export DCS_PORT={{dcs_port}}
export DCS_INFO_PORT={{dcs_info_port}}
export DB_ADMIN_USER={{traf_db_admin}}
export TRAF_USER={{traf_user}}
export MY_NODES="{{traf_nodes}}"

  
    </value>
    <value-attributes>
      <type>content</type>
    </value-attributes>
  </property>
</configuration>
